{
    "Comment": "Get and Send Invitation",
    "StartAt": "Get Email Template",
    "States": {
        "Get Email Template": {
            "Type": "Task",
            "Resource": "${GetInvitationTemplateFunctionArn}",
            "Parameters": {
                "userType.$": "$$.Execution.Input.userType"
            },
            "ResultPath": "$",
            "Next": "Send Email"
        },
        "Send Email": {
            "Type": "Task",
            "Resource": "${SendInvitationFunctionArn}",
            "Parameters": {
                "email.$": "$$.Execution.Input.email",
                "name.$": "$$.Execution.Input.name",
                "HTMLBody.$": "$"
            },
            "End": true
        }
    }
}